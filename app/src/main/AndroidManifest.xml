<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.funeraria.funeraria">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/defuncion"
        android:label="@string/app_name"
        android:theme="@style/Theme.Base.Light">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivityAdmin"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".RegistrarDifundoActivity"
            android:label="@string/title_activity_registrar_difundo"
            android:parentActivityName=".MainActivityAdmin"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.funeraria.funeraria.MainActivityAdmin" />
        </activity>
        <activity android:name=".MainActivityUser"
            android:label="@string/title_activity_main_activity_user"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".MainActivityPresenter"
            android:label="@string/title_activity_main_activity_presenter"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ConfiguracionAdminActivity"
            android:label="@string/title_activity_configuracion_admin"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity
            android:name=".ImagenesDifuntoActivity"
            android:label="@string/title_activity_imagenes_difunto"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".PlacaActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".VerPlacaActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".VerImagenesDifuntoActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".VerFloresCompradasDifuntoActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".VerVelasCompradasDifuntoActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".VerMensajesDifuntoActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".AutorizarUsuariosDifuntoActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".RegistrarUsuarioActivity"
            android:label="@string/title_activity_placa"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>