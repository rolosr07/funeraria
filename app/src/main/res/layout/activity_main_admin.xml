<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.funeraria.funeraria.MainActivityAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E56A54"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/nameAdmin"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="26dp"/>
        </LinearLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/registrarDifuntoButton"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/difunto"
                    android:layout_weight="0.33"/>

                <Button
                    android:id="@+id/buttonRegistrarPlaca"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/placa"
                    android:layout_weight="0.33"/>

                <Button
                    android:id="@+id/buttonImagenesDifunto"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/fotos"
                    android:layout_weight="0.33"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <TextView
                    android:text="Registrar Difunto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:id="@+id/registrarDifuntoTextView"
                    android:layout_weight="0.33"/>

                <TextView
                    android:text="Registrar Placa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:id="@+id/tvRegistrarPlaca"/>

                <TextView
                    android:text="Imagenes Difunto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:id="@+id/tvImagenesDifunto"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/buttonVelasCompradas"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/velas"
                    android:layout_weight="0.33"/>

                <Button
                    android:id="@+id/buttonFloresCompradas"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/flores"
                    android:layout_weight="0.33"/>

                <Button
                    android:id="@+id/buttonMensajes"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/mensajes"
                    android:layout_weight="0.33"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <TextView
                    android:text="Velas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:id="@+id/tvVelasCompradas"/>

                <TextView
                    android:text="Flores"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:id="@+id/tvFloresCompradas"/>

                <TextView
                    android:text="Mensajes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:id="@+id/tvMensajes"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/buttonAutorizarUsuarios"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/usuarios"
                    android:layout_weight="0.33"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/email_sign_in_butto233"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/carro"
                    android:layout_weight="0.33"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/configButton"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:textStyle="bold"
                    android:background="@drawable/configuracion"
                    android:layout_weight="0.33"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:text="Autorizar Usuarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:id="@+id/tvAutorizarUsuarios"
                    android:visibility="gone"/>

                <TextView
                    android:text="Envio de Urna"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:visibility="gone"/>

                <TextView
                    android:text="Configurar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:id="@+id/configText"
                    android:layout_weight="0.33"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
