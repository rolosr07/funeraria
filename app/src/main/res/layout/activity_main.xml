<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.funeraria.funeraria.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E56A54"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:text="Bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/registrarDifuntoButton"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textStyle="bold"
                    android:background="@drawable/difunto"
                    android:layout_weight="0.17"/>

                <TextView
                    android:text="Buscar Familiar o Amigo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:id="@+id/registrarDifuntoTextView"
                    android:layout_weight="0.66"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/buttonVelasCompradas"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textStyle="bold"
                    android:background="@drawable/urna"
                    android:layout_weight="0.17"/>

                <TextView
                    android:text="Administrar Urna Interactiva"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="0.66"
                    android:id="@+id/tvVelasCompradas"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/buttonAutorizarUsuarios"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textStyle="bold"
                    android:background="@drawable/columbario"
                    android:layout_weight="0.17"/>

                <TextView
                    android:text="Administrar Columbario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="0.66"
                    android:id="@+id/tvAutorizarUsuarios"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/configButton"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:textStyle="bold"
                    android:background="@drawable/logo"
                    android:layout_weight="0.8"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
