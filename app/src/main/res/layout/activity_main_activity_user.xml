<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.funeraria.funeraria.MainActivityUser">

    <TextView
        android:text="Bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22dp"/>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3.5"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/buttonComprarVelas"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/velas"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/buttonComprarFlores"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/flores"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/mensajesButton"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/mensajes"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:weightSum="3.5">

                <TextView
                    android:text="Encender Velas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tvComprarVelas"/>

                <TextView
                    android:text="Enviar      Flores"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tvComprarFlores"/>

                <TextView
                    android:text="Enviar Mensajes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3.5"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/buttonImagenesDifunto"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/fotos"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/email_sign_in_butto233"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:textStyle="bold"
                    android:background="@drawable/carro"
                    android:layout_weight="1"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/configButton"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/configuracion"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3.5">

                <TextView
                    android:text="Enviar Imagenes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tvImagenesDifunto"/>

                <TextView
                    android:text="solicitar Urna"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"/>

                <TextView
                    android:text="ConfiguraciÃ³n"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:id="@+id/configText"
                    android:layout_weight="1.1"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
