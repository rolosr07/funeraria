<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.funeraria.funeraria.RegistrarDifundoActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:text="Registrar Difunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/nombreDifunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/apellidoDifunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/tvDateNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha Nacimiento"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnChangeDateNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar Fecha Nacimiento"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/tvDateDeceso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha Deceso"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnChangeDateDeceso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar Fecha Deceso"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnRegistrarDifunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Difunto"
            android:layout_marginTop="20dp"
            android:background="#505251"
            android:textColor="@color/common_signin_btn_light_text_pressed"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
